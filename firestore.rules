
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isHost(roomId) {
      return get(/databases/$(database)/documents/rooms/$(roomId)).data.hostId == request.auth.uid;
    }

    match /rooms/{roomId} {
      allow create: if isSignedIn();
      allow get: if isSignedIn();
      allow update: if isSignedIn() && (
        isHost(roomId) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['userCount'])
      );
      allow delete: if isSignedIn();

      match /users/{userId} {
        allow read: if isSignedIn();
        allow write, delete: if isSignedIn() && (request.auth.uid == userId || isHost(roomId));
      }
      
      match /messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.user.uid == request.auth.uid;
        allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions']);
      }

      match /reactions/{reactionId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read: if isSignedIn();
        allow update, delete: if false;
      }

      match /signals/{signalId} {
        allow read, write, delete: if isSignedIn();
      }
    }
  }
}
